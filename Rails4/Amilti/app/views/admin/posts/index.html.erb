<% if flash[:message] %>
	<div class="alert alert-success">
		<%= flash[:message] %>
	</div>
<% end %>
<h1>Manage posts</h1>
<%= link_to 'Add a new post', new_admin_post_path, class: "btn btn-primary" %>
<table class="table table-striped">
	<thead>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Category</th>
			<th>Publication data</th>
			<th>Action</th>
        </tr>
	</thead>
	<tbody>
		<% @posts.each do |post| %>
			<tr>
				<td><%= post.id %></td>
				<td><%= post.name %></td>
				<td><%= post.category.name %></td>
				<td><%= post.created_at.strftime('%d-%m-%Y %H:%M')%></td>
				<td>
					<%= link_to('Edit', edit_admin_post_path(post.id), class: "btn btn-primary") %>
					<%= link_to('Delete', admin_post_path(post.id), 
								:method => :delete, class: "btn btn-danger") 
					%>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= paginate @posts %>
