<% cache comments do %>
	<% comments.each do |comment| %>
		<div class="row">

			<div class="col-md-2">
				<img src="http://lorempicsum.com/futurama/100/100/4" width="100%">
			</div>

			<div class="col-md-10">
				<p>
					<strong><%= comment.username %></strong> 
					<%= distance_of_time_in_words_to_now(comment.created_at) %>
				</p>
				<p><%= comment.content %></p>
			</div>

		</div>
	<% end %>
<% end %>