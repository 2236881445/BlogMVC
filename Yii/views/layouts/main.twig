<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="">
        <meta name="author" content="">

        {% if this.getPageTitle %}
        <title>{{ this.getPageTitle()|capitalize }} | {{ App.name }}</title>
        {% else %}
        <title>{{ App.name }}</title>
        {% endif %}

        <!-- Bootstrap core CSS -->
        <link href="/static/css/bootstrap.css" rel="stylesheet">
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js" type="text/javascript"></script>
        <script src="/static/js/bootstrap.min.js" type="text/javascript"></script>
        {% block theme_scripts %}
            <script src="/skins/default/js/default.js" type="text/javascript"></script>
        {% endblock %}
        <style>
            /* float images broke the flow */
            article p {
                overflow: hidden;
            }
            body {
                padding-top: 50px;
            }
            .sidebar {
                margin-top: 50px;
            }
        </style>
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ this.createUrl('post/index') }}">{{ App.t.t('link.blog') }}</a>
                </div>

                <div class="collapse navbar-collapse navbar-ex1-collapse navbar-right">
                    <ul class="nav navbar-nav">
                        {% set parentPage = this.getParentPage() %}
                        {% if parentPage %}
                            <li>
                                <a href="{{ parentPage['uri'] }}" role="parent-page-link">
                                    {{ App.t.t('link.backTo', {
                                        '{pageTitle}': parentPage['title']
                                    }) }}
                                </a>
                            </li>
                        {% endif %}
                        {% block header_admin_link %}
                            {% if not App.user.getIsGuest() %}
                                <li>
                                    <a href="{{ this.createUrl('admin/index') }}" role="admin-dashboard-link">
                                        {{ App.t.t('link.adminPanel') }}
                                    </a>
                                </li>
                            {% endif %}
                        {% endblock %}
                        {% block header_auth_link %}
                            {% if App.user.getIsGuest() %}
                                <li>
                                    <a href="{{ this.createUrl('site/login') }}" role="login-link">
                                        {{ App.t.t('link.login') }}
                                    </a>
                                </li>
                            {% else %}
                                <li>
                                    <a href="{{ this.createUrl('site/logout') }}" role="logout-link">
                                        {{ App.t.t('link.logout') }}
                                    </a>
                                </li>
                            {% endif %}
                        {% endblock %}
                    </ul>
                </div>
            </div><!-- /.container -->
        </div>
        <div class="container">
            {% block flash_messages %}
                {% if App.user.hasMessages() %}
                    {% for message in App.user.getMessages() %}
                        {# ffu-code #}
                        {% set level_class = message['level']=='notice'?'info':message['level']=='success'?'success':'danger' %}
                            <div class="alert alert-{{ level_class }}">
                            {{ message['message'] }}
                        </div>
                    {% endfor %}
                {% endif %}
            {% endblock %}
            {% block content_wrap %}
            <div class="row">
                <div class="col-md-12">
                    {% block content %}
                        {{ content }}
                    {% endblock %}
                    {% block pagination %}
                        {{ void(this.widget('PaginationWidget')) }}
                    {% endblock %}
                </div>
            </div>
            {% endblock %}
        </div><!-- /.container -->
    </body>
</html>