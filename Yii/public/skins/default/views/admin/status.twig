<!-- there's nothing bad in using tables for tables, right? -->
<div class="notice-wrap">
    <span class="notice">
        Data you are looking at should be cached. Cache lifespan is set to one hour,
        but you can <a href="{{ this.createUrl('admin/options') }}">flush</a> it manually.
    </span>
</div>
<table class="application-statistics colored">
    <tbody>
        {% for name, value in statistics %}
        <tr class="{{ cycle(['odd', 'even'], loop.index) }}">
            <td>{{ name }}</td>
            <td>{{ value }}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
<div class="notice-wrap">
    <span class="notice">
        Data you are looking at may be cached. Cache lifespan is set to one minute.
    </span>
</div>
<table class="service-status colored">
    <tbody>
        {% for name, value in status %}
        <tr class="{{ cycle(['odd', 'even'], loop.index) }}">
            <td>{{ name }}</td>
            <td>{{ value }}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>